
<expt>

<SETUP>  
	  <screen backgroundColour="white" devices='desktop' blockDepthOrder="10,*=random"></screen>                          
</SETUP>

<TRIAL TYPE="Trial" hideResults="true" block="1" order="fixed" trials="1">

	<text width="100%" height="70%" 
		  text=
		  "Dear participant,
Welcome to our study!
We are interested in understanding how different colours, sounds, concepts and shapes link with descriptions of beer tastes.
You would still be free to withdraw from the study at any time during the questionnaire, without needing to give a reason, and without penalty. The data will be fully anonymized, and stored on a secure computer."
	fontSize="20" />
	
	
	<preloadProgress x="20" y="90%"  horizontalAlign="left" width="70%" height="40" />
	<preloadReadyButton x="85%" y="90%" width="20%" height="40" fontSize="18" />
	
</TRIAL>

<TRIAL TYPE="Trial"  block="1" order="fixed" trials="1">
	<text text="We need to make sure the sounds you hear in this study are loud enough. If you cannot hear the auditory password playing, can you adjust your speakers. Please enter the password to continue." fontSize="20" width="60%" height="80" textAlign="center"  y="30%" />
	<soundCheck resource="1.mp3,2.mp3,3.mp3,4.mp3,5.mp3,6.mp3,7.mp3,8.mp3,9.mp3,0.mp3"/>
</TRIAL>	
	
	
	
<TRIAL TYPE="Trial"  block="1" order="fixed" trials="1">
	<text text="What is your Prolific Academic ID?" fontSize="20" width="60%" height="30" textAlign="center"  y="40%" />
	
	<input y="50%" width="300" height="50" fontSize="20"  />
   
	<nextTrialButton y="80%" x="50%" width="200" height="50" horizontalAlign="center"  fontSize="18" />
</TRIAL>	
	

<TRIAL TYPE="Trial"  block="1" order="fixed" trials="1">
	<text text="Some questions before we start:" fontSize="20" width="200" height="30" horizontalAlign="left" x="20" y="20" />
	<text text="Sex:" fontSize="20" width="200" height="30" x="60" y="85" horizontalAlign="left" />
	<sex y="80" height="40" width="250" fontSize="20" horizontalAlign="left" x="30%"/>
	<text text="What country do you come from?" fontSize="20" width="160" height="100" x="60" y="300" horizontalAlign="left"/>
	<input y="280" width="300" height="50" fontSize="20" horizontalAlign="left" x="30%" />
    <text text="Age:" fontSize="20" width="200" height="30" x="60"  y="165" horizontalAlign="left" />
	<age  y="180" height="100" width="122.5" fontSize="20" horizontalAlign="left" x="30%" />
	
	<nextTrialButton y="90%" x="50%" width="200" height="50" horizontalAlign="center"  fontSize="18" />
</TRIAL>	
	
	
<TRIAL block="5">
	
	<text width="80%" height="25%"
     text="Please follow the instructions on each trial. There are 26 trials in total."	fontSize="20" verticalAlign="center" horizontalAlign="center" textAlign="center" />	
	<nextTrialButton y="90%" x="50%" width="200" depth="0" height="50" verticalAlign="bottom" text="Begin" fontSize="18" />
	
	<text copyOverId="taste2" text="" />
</TRIAL>
	

	
<TRIAL order="random" trials="1" block="10,1">

	<text textAlign="center" fontSize="18" width="100%" height="100" verticalAlign="top"  y="0" text="Please drag the descriptions into the box below, arranging them according to how well you think each associates with the labels at the bottom of the screen (Bouba and Kiki). Vertical position does not matter."
		/>

	<text x="20%---35%---50%---65%---80%" background="e9e9e9" textAlign="center" fontSize="18" y="15%" group="g1" howMany="5" width="10%" height="7%" text="cold & refreshing---green & resinous---fruity---biscuit & malty---bitter" id="refresh---greRes---fruity---biscuity---bitter" />
	
	<shuffle groups="g1" />
    
    <drag id="drag" target="dragTarget" groups="g1" capture="x" dragTransparency=".5" />
	
	<text copyOverId="taste2" id="dv2---dv1" horizontalAlign="left---right" y="100%" verticalAlign="bottom" textAlign="left---right" x="0%---100%" howMany="2" fontSize="22" height="50" width="400"
		text="bouba---kiki"   />
    
    <box id="dragTarget" x="50%" horizontalAlign="center" verticalAlign="bottom"  y="93%" width="99%" height="55%" borderAlpha=".5" borderSize="2" />

    <nextTrialButton y="100%"  key=" " verticalAlign="bottom" text="next (SPACE)" width="170" height="40"  fontSize="18" />
	
	<results dv="${dv1.get('text')}" />
	
	<trialCounter height="60" depth="0" y="43%" total="26" textAlign="center" />
	
</TRIAL>

	
<TRIAL order="random" trials="16" block="10,2">
	<text textAlign="center" fontSize="18" width="100%" height="100" verticalAlign="top"  y="0" text="Please drag the descriptions into the box below, arranging them according to how well you think each associates with the colour. Vertical position does not matter."
		/>
	
	<box color="0x00FFFF|0x000000|0x0000FF|0xFF00FF|0x808080|0x008000|0x00FF00|0x800000|0x000080|0x808000|0x800080|0xFF0000|0xC0C0C0|0x008080|0xFFFFFF|0xFFFF00" id="colour"
		 name="aqua|black|blue|fuchsia|gray|green|lime|maroon|navy|olive|purple|red|silver|teal|white|yellow" borderColor="0xececec" borderSize="1"
		 y="28%" width="100" height="100" />

	<text x="20%---35%---50%---65%---80%" background="e9e9e9" textAlign="center" fontSize="18" y="15%" group="g1" howMany="5" width="10%" height="7%" text="cold & refreshing---green & resinous---fruity---biscuit & malty---bitter" id="refresh---greRes---fruity---biscuity---bitter"  />
	
	<shuffle groups="g1" />
    
    <drag id="drag" target="dragTarget" groups="g1" capture="x" dragTransparency=".5" />
	
	<text copyOverId="taste2" id="dv2---dv1" horizontalAlign="left---right" y="100%" verticalAlign="bottom" textAlign="left---right" x="0%---100%" howMany="2" fontSize="22" height="50" width="400"
		text="not at all associated with the colour---very much so associated with the colour"   />
    
    <box id="dragTarget" x="50%" horizontalAlign="center" verticalAlign="bottom"  y="93%" width="99%" height="55%" borderAlpha=".5" borderSize="2" />

    <nextTrialButton y="100%"  key=" " verticalAlign="bottom" text="next (SPACE)" width="170" height="40"  fontSize="18" />
	
	<results dv="${colour.get('name')}" />
	
	<trialCounter height="60" depth="0" y="43%" total="26" textAlign="center" />
</TRIAL>
	
	
<TRIAL order="random" trials="4" block="10,3">
	<text textAlign="center" fontSize="18" width="100%" height="100" verticalAlign="top"  y="0" text="Listen to the instrument. Please click the description that you feel the sound best links with."/>
	

	<button hideResults="true" x="50%---31%---38.2%---61.8%---69%" y="75%---56.2%---33.8%---33.8%---56.2%" fontSize="18" group="g1" howMany="5" width="17%" height="15%" text="cold & refreshing---green & resinous---fruity---biscuit & malty---bitter" id="refresh---greRes---fruity---biscuity---bitter">
		<action>
			Trial.save('selected',stim.id);
			Experiment.nextTrial();
		</action>
	</button>
	
	<shuffle groups="g1" />
    
	<sound id="sound" resource="clarinet|piano|trombone|viola" resource1=".wav"  />
    
	<results dv="${sound.get('resource')}" />
	
	<trialCounter height="60" depth="0" y="99%" total="26" textAlign="center" />
</TRIAL>
	
<TRIAL order="random" trials="5" block="10,4">
	<text textAlign="center" fontSize="18" width="100%" height="100" verticalAlign="top"  y="0" text="By adjusting the line scale you will change the pitch of a tone. Please adjust the pitch so that you feel it matches the description below."/>
	

	<text fontSize="18" width="50%" height="40" textAlign="center" y="30%" text="cold & refreshing|green & resinous|fruity|biscuit & malty|bitter" />

	<synth id="synth" />

	<linescale y="60%" id="linescale" width="80%" labels="lower pitch,higher pitch">
		<onChange>
			synth.get('play')(stim.value);
		</onChange>
	</linescale>    
	
	<results  />
	
	<trialCounter height="60" depth="0" y="95%" total="26" textAlign="center" />
	
	<nextTrialButton y="100%"  key=" " verticalAlign="bottom" text="next (SPACE)" width="170" height="40"  fontSize="18" />
	
</TRIAL>
	



	
<TRIAL TYPE="Trial" hideResults="false" block="100" order="fixed" trials="1">

